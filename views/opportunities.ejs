<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CommuniTeens</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/styles/opportunities.css">
    <link rel="stylesheet" href="/styles/nav.css">

    <script src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs"></script>
</head>

<body>
    <nav>
        <div class="name">
            <a href="">
                <h1>CommuniTeens</h1>
            </a>
        </div>
        <div class="subheadings">
            <a href="/dashboard">Dashboard</a>
            <a href="/opportunities">Opportunities</a>
            <a href="/groups">Groups</a>
            <a href="/account">Account</a>
        </div>
    </nav>
    <div class="search">
        <div class="keyword">
            <input type="text" placeholder="Keyword...">
        </div>
        <div class="location">
            <input type="text" placeholder="Zipcode...">
        </div>
        <div class="date">
            <input type="text" placeholder="Date (MM/DD/YY)">
        </div>
        <div class="searchBtn">
            <input type="button" value="Search">
        </div>
    </div>
    <div class="events">
        <h1 class="bigHeader">Opportunities</h1>
        <div class="eventsContainer">
            <% results.forEach((event)=> { %>
                <div class="event" data-eventID="<%=event.eventID%>"
                    onclick="window.location.href = '/event/<%=event.eventID%>'">
                    <div class="date">
                        <h1 class="month">
                            <%= new Date(event.date).toLocaleString('en-US', { month: 'short' }).toUpperCase() %>
                        </h1>
                        <h1 class="day">
                            <%= new Date(event.date).getDate() %>
                        </h1>
                    </div>
                    <div class="otherInfo">
                        <h1 class="name">
                            <%= event.name %>
                        </h1>
                        <h2 class="company">
                            <%= event.company %>
                        </h2>
                        <h2 class="location">
                            <%= event.address %>
                        </h2>
                    </div>
                    <div class="hiddenInfo" data-id="<%=event.eventID%>">
                        <h2>
                            <%=event.eventID%>
                        </h2>
                        <h2>
                            <%=event.date%>
                        </h2>
                        <h2>
                            <%=event.keywords%>
                        </h2>
                        <h2>
                            <%=event.registrationCount%>
                        </h2>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <div class="info">
        <% upcomingEvents.forEach((event)=> { %>
            <div class="dataEvent">
                <h2>
                    <%=event.ID%>
                </h2>
                <h2>
                    <%=event.date%>
                </h2>
                <h2>
                    <%=event.keywords%>
                </h2>
                <h2>
                    <%=event.registrationCount%>
                </h2>
            </div>
            <% }) %>
                <h2>
                    <%=pastEvents%>
                </h2>
    </div>

    <script src="/scripts/opportunities.js"></script>
    <script src="/scripts/ai.js"></script>

</body>

</html>